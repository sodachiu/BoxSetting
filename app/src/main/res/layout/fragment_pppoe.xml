<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test"
    android:id="@+id/pppoe_layout">

    <TextView
        style="@style/TitleStyle"
        android:text="有线PPPoE"/>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            style="@style/LayoutTagStyle"
            android:layout_width="wrap_content"
            android:text="用户名："/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/pppoe_username"
            android:background="@drawable/editview_selector"
            android:nextFocusDown="@id/pppoe_password"
            android:nextFocusUp="@id/pppoe_username"
            android:nextFocusLeft="@id/pppoe_username"
            android:nextFocusRight="@id/pppoe_username"
            android:paddingLeft="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            style="@style/LayoutTagStyle"
            android:layout_width="wrap_content"
            android:text="密码："/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:background="@drawable/editview_selector"
            android:paddingLeft="10dp"
            android:nextFocusDown="@id/pppoe_confirm"
            android:nextFocusUp="@id/pppoe_username"
            android:nextFocusLeft="@id/pppoe_password"
            android:nextFocusRight="@id/pppoe_password"
            android:id="@+id/pppoe_password" />

    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="100dp"
        android:layout_marginTop="50dp">

        <Button
            style="@style/ButtonStyle"
            android:text="确定"
            android:nextFocusRight="@id/pppoe_cancel"
            android:nextFocusDown="@id/pppoe_confirm"
            android:nextFocusUp="@id/pppoe_password"
            android:nextFocusLeft="@id/pppoe_confirm"
            android:id="@+id/pppoe_confirm" />
        <Button
            style="@style/ButtonStyle"
            android:layout_marginLeft="20dp"
            android:nextFocusLeft="@id/pppoe_confirm"
            android:nextFocusUp="@id/pppoe_password"
            android:nextFocusRight="@id/pppoe_cancel"
            android:nextFocusDown="@id/pppoe_cancel"
            android:text="取消"
            android:id="@+id/pppoe_cancel" />

    </LinearLayout>



</LinearLayout>