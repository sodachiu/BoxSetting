<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical">

    <include layout="@layout/template_header" />

    <!--主体部分-->
    <LinearLayout
        android:id="@+id/under_header"
        style="@style/mainStyle">

        <!--引入menu布局-->
        <include layout="@layout/template_menu" />

        <!--放碎片的布局-->
        <LinearLayout
            style="@style/fragmentStyle"
            android:id="@+id/layout_my_info">

            <TextView
                android:text="@string/about_this_machine"
                style="@style/TitleStyle"
                android:background="@drawable/background_title"/>


            <LinearLayout style="@style/LayoutStyle" android:focusable="false">
                <TextView style="@style/LayoutTagStyle" android:text="@string/machine_type"/>
                <TextView android:id="@+id/dev_type" style="@style/LayoutContentStyle" />
            </LinearLayout>
            <ImageView
                style="@style/DividerStyle"
                android:background="@drawable/background_divider"/>

            <LinearLayout style="@style/LayoutStyle" android:focusable="false">
                <TextView style="@style/LayoutTagStyle" android:text="@string/software_release"/>
                <TextView android:id="@+id/software_version" style="@style/LayoutContentStyle" />
            </LinearLayout>
            <ImageView
                style="@style/DividerStyle"
                android:background="@drawable/background_divider"/>

            <LinearLayout style="@style/LayoutStyle" android:focusable="false">
                <TextView style="@style/LayoutTagStyle" android:text="@string/android_release"/>
                <TextView android:id="@+id/android_version" style="@style/LayoutContentStyle" />
            </LinearLayout>
            <ImageView
                style="@style/DividerStyle"
                android:background="@drawable/background_divider"/>

            <LinearLayout style="@style/LayoutStyle" android:focusable="false">
                <TextView style="@style/LayoutTagStyle" android:text="@string/mac_address"/>
                <TextView android:id="@+id/mac_addr" style="@style/LayoutContentStyle" />
            </LinearLayout>
            <ImageView
                style="@style/DividerStyle"
                android:background="@drawable/background_divider"/>

            <LinearLayout style="@style/LayoutStyle" android:focusable="false">
                <TextView style="@style/LayoutTagStyle" android:text="@string/stbid"/>
                <TextView android:id="@+id/stbid" style="@style/LayoutContentStyle" />
            </LinearLayout>
            <ImageView
                style="@style/DividerStyle"
                android:background="@drawable/background_divider"/>

            <LinearLayout style="@style/LayoutStyle" android:focusable="false">
                <TextView style="@style/LayoutTagStyle" android:text="@string/authenticate_main_address"/>
                <TextView android:id="@+id/auth_main_addr" style="@style/LayoutContentStyle" />
            </LinearLayout>
            <ImageView
                style="@style/DividerStyle"
                android:background="@drawable/background_divider"/>

            <LinearLayout style="@style/LayoutStyle" android:focusable="false">
                <TextView style="@style/LayoutTagStyle" android:text="@string/authenticate_backup_address"/>
                <TextView android:id="@+id/auth_backup_addr" style="@style/LayoutContentStyle" />
            </LinearLayout>
            <ImageView
                style="@style/DividerStyle"
                android:background="@drawable/background_divider"/>

            <LinearLayout style="@style/LayoutStyle" android:focusable="false">
                <TextView style="@style/LayoutTagStyle" android:text="@string/terminal_manage_main_address"/>
                <TextView android:id="@+id/terminal_main_addr" style="@style/LayoutContentStyle" />
            </LinearLayout>
            <ImageView
                style="@style/DividerStyle"
                android:background="@drawable/background_divider"/>

            <LinearLayout style="@style/LayoutStyle" android:focusable="false">
                <TextView style="@style/LayoutTagStyle" android:text="@string/terminal_manage_backup_address"/>
                <TextView android:id="@+id/terminal_backup_addr" style="@style/LayoutContentStyle" />
            </LinearLayout>
            <ImageView
                style="@style/DividerStyle"
                android:background="@drawable/background_divider"/>

            <LinearLayout style="@style/LayoutStyle" android:focusable="false">
                <TextView style="@style/LayoutTagStyle" android:text="@string/authenticate_account"/>
                <TextView android:id="@+id/auth_account" style="@style/LayoutContentStyle" />
            </LinearLayout>
            <ImageView
                style="@style/DividerStyle"
                android:background="@drawable/background_divider"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>