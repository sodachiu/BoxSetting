<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical">

    <!--header部分-->
    <include layout="@layout/template_header" />

    <LinearLayout
        android:id="@+id/under_header"
        style="@style/mainStyle">

        <!--引入menu布局-->
        <include layout="@layout/template_menu" />

        <LinearLayout
            style="@style/fragmentStyle"
            android:id="@+id/layout_bluetooth">

            <TextView
                android:text="   设置蓝牙"
                style="@style/TitleStyle"
                android:background="@drawable/background_title"/>


            <LinearLayout
                style="@style/LayoutStyle"
                android:focusable="true"
                android:id="@+id/switch_bluetooh"
                android:nextFocusRight="@id/switch_bluetooh"
                android:nextFocusLeft="@id/switch_bluetooh"
                android:nextFocusUp="@id/switch_bluetooh">

                <TextView
                    style="@style/LayoutTagStyle"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="100dp"
                    android:text="蓝牙开关" />
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/checkbox_off"
                    android:id="@+id/image_bluetooth_state"/>
                <!--此处给ImageView设定了初始图片，在代码中要改成动态设置-->
                <TextView
                    style="@style/LayoutContentStyle"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:text="已绑定"
                style="@style/TitleStyle"
                android:paddingLeft="40dp"
                android:background="@drawable/background_title"/>


            <ListView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingLeft="60dp"
                android:id="@+id/bound_bluetooth_list"
                android:nextFocusDown="@id/unbind_bluetooth_list">
            </ListView>

            <TextView
                android:text="未绑定"
                style="@style/TitleStyle"
                android:paddingLeft="40dp"
                android:background="@drawable/background_title"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="60dp"
                android:id="@+id/unbind_bluetooth_list"
                android:nextFocusDown="@id/unbind_bluetooth_list">

            </ListView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>